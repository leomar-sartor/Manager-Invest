@model Carteira.Entity.Ativo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ativo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "Ativo", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Nome)
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Sigla)
                @Html.EditorFor(model => model.Sigla)
                @Html.ValidationMessageFor(model => model.Sigla)
            </div>
            <div class="form-group">
                <label asp-for="TipoInvestimento" class="control-label"></label>
                @*<select asp-for="TipoInvestimento" class="form-control"></select>*@
                <input-for model="TipoInvestimento" select-show-id="true" />
                <span asp-validation-for="TipoInvestimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPapel" class="control-label"></label>
                @*<select asp-for="TipoPapel" class="form-control"></select>*@
                <input-for model="TipoPapel" />
                <span asp-validation-for="TipoPapel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
        </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
