@model IEnumerable<Carteira.Entity.Configuracao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardUser.cshtml";
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Novo", "Create", "Configuracao", new { Area = "Usuario" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Configuracao", new { Area = "Usuario", Id = @item.Id })  |
                    @Html.ActionLink("Detalhes", "Details", "Configuracao", new { Area = "Usuario", Id = @item.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Configuracao", new { Area = "Usuario", Id = @item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
