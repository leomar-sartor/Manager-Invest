@model Carteira.Entity.Ativo
@using Carteira.Entity;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardUser.cshtml";
}

<h1>Create</h1>

<h4>Ativo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Ativo", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Nome)
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Sigla)
                @Html.EditorFor(model => model.Sigla)
                @Html.ValidationMessageFor(model => model.Sigla)
            </div>
            <div class="form-group">
                <input-for model="TipoInvestimento" select-show-id="true" />
            </div>
            <div class="form-group">
                <input-for model="TipoPapel" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

